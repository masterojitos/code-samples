#content .formError, .formError
        z-index: 90;
        margin-top: -3em !important
        font  400 1rem Lato
        width: 10em
        animation( 0.3s ease-out 0s normal none 1 fade)
        &:before
            content: '\e6be'
            display: inline-block
            font-family: Blim
            position: absolute
            left: 0.7em
            font-size: 1.6em
            color: errorColor
            bottom: -0.6em
        .formErrorContent
            display: inline-block
            margin: 0
            color: errorColor
            border: 2px solid errorColor
            padding: 0.2em 0.4em
            border-radius: 0.5em
            background: #FD
            text-align: left
        .formErrorArrow
            display none
#content .form-1, .form-1
    .formError
        width  32.3em
#content .form-2, .form-2
    .formError
        myWidthCalc(100% \- 1.6em)
#content p.formError
    top -2.3em !important